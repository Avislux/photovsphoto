<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.photovphoto.jonathan.photovphoto.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textTitleText"
        android:textSize="50sp"
        android:textColorHighlight="#68697a"
        android:singleLine="true"
        android:textColor="#5160e4"
        android:id="@+id/placeholderTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/textPlaySolo"
        android:id="@+id/textViewPlaySolo"
        android:layout_marginTop="90dp"
        android:textColor="#0004ff"
        android:layout_below="@+id/placeholderTitle"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:onClick= "onClickPlaySolo"
        android:background="#bdbdbd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/textPlayOnline"
        android:id="@+id/textViewPlayOnline"
        android:textColor="#0004ff"
        android:textSize="30sp"
        android:textIsSelectable="false"
        android:layout_marginTop="46dp"
        android:textAlignment="center"
        android:layout_below="@+id/textViewPlaySolo"
        android:layout_centerHorizontal="true"
        android:onClick= "onClickPlayOnline"
        android:background="#a7a7a7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/textAnalyze"
        android:id="@+id/textViewAnalyze"
        android:textColor="#0004ff"
        android:textSize="30sp"
        android:textIsSelectable="false"
        android:layout_marginTop="75dp"
        android:textAlignment="center"
        android:onClick="onClickAnalyze"
        android:background="#a7a7a7"
        android:layout_below="@+id/textViewPlayOnline"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
