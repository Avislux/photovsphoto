<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.analyze">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/textAnalyzeDescription"
        android:id="@+id/textViewAnalyzeDescription"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewPicture"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:contentDescription="picture thumbnail" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/textUpload"
        android:id="@+id/buttonUpload"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="25sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textTakePicture"
        android:id="@+id/buttonGo"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textViewAnalyzeDescription"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textChooseFile"
        android:id="@+id/buttonChooseFile"
        android:layout_below="@+id/buttonGo"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="File Location"
        android:id="@+id/textViewFileName"
        android:textAlignment="center"
        android:layout_above="@+id/buttonUpload"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
